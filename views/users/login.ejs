<%layout("/layouts/boilerplate.ejs") -%>
<h1 class="col-6 offset-3"> Login in wanderlust</h1>
<div class="row">
  <div class="col-6 offset-3">
    <form action="/login" method="POST" class="needs-validation" novalidate>
      <!-- novalidate is written such that the by default validation in the browser is not used.  -->
      <div class="mb-3">
        <label class="form-label" for="username">username</label>
        <input name="username" 
        id = "username" type="text" class="form-control" required/>
        <!-- <div class="valid-feedback">Looks good!</div> -->
      </div>
      <div class="mb-3">
        <label class="form-label" for="password">Password</label>
        <input name="password" 
        id = "password" type="password" class="form-control" required/>
      </div>
      <button class = "btn btn-success">Login</button>
    </form>
  </div>
</div>
